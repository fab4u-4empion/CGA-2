<UserControl x:Class="CGA2.UI.ObjectSettings.SceneObjectSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CGA2.UI.ObjectSettings"
             mc:Ignorable="d" 
             d:DesignWidth="450" Height="Auto">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Height="20" Text="Name" FontSize="15" Margin="0,0,0,3" FontWeight="SemiBold"/>
            <TextBox x:Name="ObjectNameTextBox" FontSize="14" Padding="0,3"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Height="20" Text="Location" FontSize="15" FontWeight="SemiBold"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Height="15" Text="X" FontSize="13" Margin="0,0,0,3"/>
                    <TextBox x:Name="ObjectXTextBox" FontSize="14" Padding="0,3"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="5,0,5,0">
                    <TextBlock Height="15" Text="Y" FontSize="13" Margin="0,0,0,3"/>
                    <TextBox x:Name="ObjectYTextBox" FontSize="14" Padding="0,3"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Height="15" Text="Z" FontSize="13" Margin="0,0,0,3"/>
                    <TextBox x:Name="ObjectZTextBox" FontSize="14" Padding="0,3"/>
                </StackPanel>
            </Grid>
        </StackPanel>
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Height="20" Text="Rotation" FontSize="15" FontWeight="SemiBold"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Height="15" Text="Yaw" FontSize="13" Margin="0,0,0,3"/>
                    <TextBox x:Name="ObjectYawTextBox" FontSize="14" Padding="0,3"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="5,0,5,0">
                    <TextBlock Height="15" Text="Pitch" FontSize="13" Margin="0,0,0,3"/>
                    <TextBox x:Name="ObjectPitchTextBox" FontSize="14" Padding="0,3"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Height="15" Text="Roll" FontSize="13" Margin="0,0,0,3"/>
                    <TextBox x:Name="ObjectRollTextBox" FontSize="14" Padding="0,3"/>
                </StackPanel>
            </Grid>
        </StackPanel>
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Height="20" Text="Scale" FontSize="15" FontWeight="SemiBold"/>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <TextBlock Height="15" Text="X" FontSize="13" Margin="0,0,0,3"/>
                    <TextBox x:Name="ObjectScaleXTextBox" FontSize="14" Padding="0,3"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Margin="5,0,5,0">
                    <TextBlock Height="15" Text="Y" FontSize="13" Margin="0,0,0,3"/>
                    <TextBox x:Name="ObjectScaleYTextBox" FontSize="14" Padding="0,3"/>
                </StackPanel>
                <StackPanel Grid.Column="2">
                    <TextBlock Height="15" Text="Z" FontSize="13" Margin="0,0,0,3"/>
                    <TextBox x:Name="ObjectScaleZTextBox" FontSize="14" Padding="0,3"/>
                </StackPanel>
            </Grid>
        </StackPanel>
        <Button Grid.Row="4" Height="30" FontSize="15" Content="Save" VerticalAlignment="Bottom" Click="Button_Click"/>
    </Grid>
</UserControl>
