<Window x:Class="CGA2.UI.ObjectSettings.ObjectSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CGA2.UI.ObjectSettings"
        mc:Ignorable="d"
        Title="Objects Settings" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="0" Margin="20,10,10,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Objects" HorizontalAlignment="Center" FontSize="20" FontWeight="DemiBold"/>
            <TreeView Grid.Row="1" x:Name="ObjectsTreeView" SelectedItemChanged="ObjectsTreeView_SelectedItemChanged">
                <TreeView.Resources>
                    <SolidColorBrush
                        x:Key="{x:Static SystemColors.HighlightBrushKey}" 
                        Color="#30666666" 
                    />
                    <SolidColorBrush
                        x:Key="{x:Static SystemColors.HighlightTextBrushKey}" 
                        Color="#000000" 
                    />
                </TreeView.Resources>
            </TreeView>
        </Grid>
        <Grid Grid.Column="1" Margin="10,10,20,10">
            <Grid.RowDefinitions>
                <RowDefinition Height="30"/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Text="Properties" HorizontalAlignment="Center" FontSize="20" FontWeight="DemiBold"/>
            <StackPanel Grid.Row="1" x:Name="ObjectSettingsStackPanel"/>
        </Grid>
    </Grid>
</Window>
