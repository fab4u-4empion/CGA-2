<Window x:Class="CGA2.UI.ObjectSettings.ObjectSettings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CGA2.UI.ObjectSettings"
        mc:Ignorable="d"
        Title="ObjectSettings" 
        Height="600" 
        Width="800"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="400"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <TreeView Grid.Column="0" x:Name="ObjectsTreeView" Margin="20,20" SelectedItemChanged="ObjectsTreeView_SelectedItemChanged">
            <TreeView.Resources>
                <SolidColorBrush
                    x:Key="{x:Static SystemColors.HighlightBrushKey}" 
                    Color="#30666666" 
                />
                <SolidColorBrush
                    x:Key="{x:Static SystemColors.HighlightTextBrushKey}" 
                    Color="#000000" 
                />
            </TreeView.Resources>
        </TreeView>
    </Grid>
</Window>
