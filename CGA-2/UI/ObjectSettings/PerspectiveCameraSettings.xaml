<UserControl x:Class="CGA2.UI.ObjectSettings.PerspectiveCameraSettings"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CGA2.UI.ObjectSettings"
             mc:Ignorable="d" 
             Height="Auto" 
             d:DesignWidth="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Height="20" Text="Name" FontSize="15" Margin="0,0,0,3" FontWeight="SemiBold"/>
            <TextBox x:Name="CameraNameTextBox" FontSize="14" Padding="0,3"/>
        </StackPanel>
        <StackPanel Grid.Row="1" Margin="0,0,0,10">
            <TextBlock Height="20" Text="Near plane" FontSize="15" Margin="0,0,0,3" FontWeight="SemiBold"/>
            <TextBox x:Name="CameraNearPlaneTextBox" FontSize="14" Padding="0,3"/>
        </StackPanel>
        <StackPanel Grid.Row="2" Margin="0,0,0,10">
            <TextBlock Height="20" Text="Far plane" FontSize="15" Margin="0,0,0,3" FontWeight="SemiBold"/>
            <TextBox x:Name="CameraFarPlaneTextBox" FontSize="14" Padding="0,3"/>
        </StackPanel>
        <StackPanel Grid.Row="3" Margin="0,0,0,10">
            <TextBlock Height="20" Text="FoV" FontSize="15" Margin="0,0,0,3" FontWeight="SemiBold"/>
            <TextBox x:Name="CameraFoVTextBox" FontSize="14" Padding="0,3"/>
        </StackPanel>
        <Button Grid.Row="4" Height="30" FontSize="15" Content="Save" VerticalAlignment="Bottom" Click="Button_Click"/>
    </Grid>
</UserControl>
